<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ScheMa" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lime_green_500</item>
        <item name="colorPrimaryVariant">@color/lime_green_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lime_green_500</item>
        <item name="colorSecondaryVariant">@color/lime_green_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/dark_background</item>
        <!-- Default text color -->
        <item name="android:textColor">@color/white</item>

        <!-- Default button style -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/lime_green_500</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.App.Trampoline" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>