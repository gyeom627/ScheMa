<?xml version="1.0" encoding="utf-8"?>

                                                   

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:fitsSystemWindows="true"
        tools:context=".ui.activity.SettingsActivity" android:tag="layout/activity_settings_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="집 주소" />

        <TextView
            android:id="@+id/tv_home_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="아래 버튼을 눌러 주소를 변경하세요."/>

        <Button
            android:id="@+id/btn_change_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주소 변경하기"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="평균 준비 시간 (분)" />

        <EditText
            android:id="@+id/edit_text_prep_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="예: 60" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="미리 알림 시간 (분)" />

        <EditText
            android:id="@+id/edit_text_pre_alarm_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="기본값: 5" />

        <Button
            android:id="@+id/button_save_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="설정 저장" />

    </LinearLayout>
         